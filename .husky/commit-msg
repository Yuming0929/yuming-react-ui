#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 简单的 commit message 检查
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|build|ci|revert)(\(.+\))?: .{1,}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "❌ Invalid commit message format!"
    echo ""
    echo "Commit message should follow the format:"
    echo "  <type>(<scope>): <subject>"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, test, chore, perf, build, ci, revert"
    echo ""
    echo "Example:"
    echo "  feat(button): add loading state"
    exit 1
fi

